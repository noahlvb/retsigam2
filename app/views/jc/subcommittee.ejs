<div class="row">
    <div class="col s6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Subcommittee</span>
                <p>
                    <b>Klacht nr:</b> <%= complaint.record %><br>
                    <b>Opbrenger:</b> <%= complaint.originator.map(user => {return ' ' + user[1]}) %><br>
                    <b>Datum en tijd incident:</b> <%= complaint.complaintDateTime %><br>
                    <b>Locatie:</b> <%= complaint.complaintLocation %><br>
                    <b>Beschuldigde:</b> <%= complaint.accused.map(user => {return ' ' + user[1]}) %><br>
                    <b>Getuigen:</b> <%= complaint.witnesses.map(user => {return ' ' + user[1]}) %><br><br>
                    <b>Subcommittee leden:</b> <%= subcommittee.assigned.map(user => {return ' ' + user[1]}) %>
                </p>
            </div>
        </div>
        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header active"><i class="material-icons">attach_file</i>Wat is er gebeurd</div>
                <div class="collapsible-body"><span><%= complaint.happend %></span></div>
            </li>
        </ul>
    </div>
    <div class="col s6">
        <div class="card blue">
            <div class="card-content white-text">
                <span class="card-title">Onderzoek</span>
                <p>Hieronder kan je het onderzoeks verslag opschrijven en insturen</p>
                <form action="/jc/subcommittees/<%= subcommittee.id %>" method="post">
                    <div class="input-field">
                        <label for="investigation">Onderzoeks verslag</label>
                        <textarea rows="6" class="materialize-textarea" id="investigation" name="investigation" required></textarea>
                    </div>
                    <input class="btn" type="submit" name="saveApply" value="opslaan">
                    <input class="btn" type="submit" name="saveApply" value="inleveren">
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#investigation').val('<%= subcommittee.report %>')
</script>
